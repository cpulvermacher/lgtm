{
    "files.exclude": {
        "out": true
    },
    "search.exclude": {
        "out": true
    },
    "typescript.tsc.autoDetect": "off",
    "typescript.format.semicolons": "insert",
    "[typescript]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[yaml]": {
        "editor.formatOnSave": false
    },
    "editor.codeActionsOnSave": {
        "source.organizeImports": "always"
    }
}
