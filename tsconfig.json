{
    "compilerOptions": {
        "module": "Node16",
        "target": "ES2022",
        "outDir": "out",
        "lib": ["ES2022", "DOM"],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": true,
        "skipLibCheck": true // workaround for lru-cache types (can be removed if only lru-cache@11.0.1 is used)
    },
    "exclude": [
        // unit tests use vitest, which doesn't work with commonjs
        // exclude it from compilation via tsc and rely on IDE instead
        "src/test/unit"
    ]
}
